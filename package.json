{
  "name": "stack-file-sync",
  "displayName": "Stack File Sync",
  "description": "同步不同代码仓库之间的文件",
  "version": "1.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/aa12gq/stack-file-sync.git"
  },
  "publisher": "aa12gq",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:stack-file-sync.syncFiles",
    "onCommand:stack-file-sync.configureSync"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stack-file-sync.syncFiles",
        "title": "同步文件 (默认快捷键: Ctrl/Cmd+Alt+S)",
        "category": "Stack File Sync",
        "icon": "$(sync)"
      },
      {
        "command": "stack-file-sync.configureSync",
        "title": "配置同步 (默认快捷键: Ctrl/Cmd+Alt+,)",
        "category": "Stack File Sync",
        "icon": "$(gear)"
      },
      {
        "command": "stack-file-sync.showOutput",
        "title": "显示同步日志",
        "category": "Stack File Sync",
        "icon": "$(output)"
      }
    ],
    "keybindings": [
      {
        "command": "stack-file-sync.syncFiles",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "stack-file-sync.configureSync",
        "key": "ctrl+alt+,",
        "mac": "cmd+alt+,",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "configuration": {
      "title": "Stack File Sync",
      "properties": {
        "stackFileSync.repositories": {
          "type": "array",
          "default": [],
          "description": "要同步的仓库列表",
          "items": {
            "type": "object",
            "required": [
              "name",
              "url",
              "branch"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "仓库名称"
              },
              "url": {
                "type": "string",
                "description": "仓库URL"
              },
              "branch": {
                "type": "string",
                "description": "分支名称"
              },
              "sourceDirectory": {
                "type": "string",
                "description": "要同步的源目录（相对于仓库根目录）",
                "default": "proto"
              }
            }
          }
        },
        "stackFileSync.filePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.proto"
          ],
          "description": "要同步的文件模式（支持 glob 模式）"
        },
        "stackFileSync.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/backend/**"
          ],
          "description": "要排除的文件模式（支持 glob 模式）"
        },
        "stackFileSync.targetDirectory": {
          "type": "string",
          "default": "",
          "description": "同步文件的目标目录"
        },
        "stackFileSync.backupEnabled": {
          "type": "boolean",
          "default": true,
          "description": "是否在同步前备份文件"
        },
        "stackFileSync.postSyncCommands": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "directory",
              "command"
            ],
            "properties": {
              "directory": {
                "type": "string",
                "description": "执行命令的目录（相对于工作区根目录）"
              },
              "command": {
                "type": "string",
                "description": "要执行的命令"
              }
            }
          },
          "default": [],
          "description": "同步完成后要执行的命令列表"
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "stack-file-sync.syncFiles",
          "group": "navigation",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "explorer/context": [
        {
          "command": "stack-file-sync.syncFiles",
          "group": "2_workspace",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "stack-file-sync.configureSync",
          "group": "2_workspace",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "commandPalette": [
        {
          "command": "stack-file-sync.syncFiles",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "stack-file-sync.configureSync",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "pnpm run compile -- --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "simple-git": "^3.22.0"
  }
}
